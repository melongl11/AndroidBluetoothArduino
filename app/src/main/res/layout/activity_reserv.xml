<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.mingyu.javaproject.ALActivity">


    <Button
        android:id="@+id/btn_reservset"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dip"
        android:text="OK"
        android:layout_marginTop="35dp"
        android:layout_marginStart="48dp"
        android:layout_below="@+id/timePicker"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Cancel"
        android:id="@+id/btn_reservcancel"
        android:layout_alignBaseline="@+id/btn_reservset"
        android:layout_alignBottom="@+id/btn_reservset"
        android:layout_toEndOf="@+id/btn_reservset" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="550dp"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        android:layout_marginTop="114dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
